<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--日历控件-->
    <style name="CalendarTitle">
        <item name="android:textSize">@dimen/calendar_text_month</item>
    </style>

    <style name="CalendarCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">@dimen/calendar_text_date</item>
    </style>

    <style name="CalendarCell.CalendarPrice">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/price_calendar_text_selector</item>
    </style>
</resources>